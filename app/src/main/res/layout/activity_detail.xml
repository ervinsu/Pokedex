<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="com.ervin.mypokedex.ui.detail.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@{view_model.gradientElements}"
            app:title="@{view_model.pokemonName}"
            android:id="@+id/detail_toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/detail_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="@dimen/image_detail_inDp"
                android:layout_height="@dimen/image_detail_inDp"
                android:id="@+id/iv_poke_picture"
                android:transitionName="pokePicture"
                android:contentDescription="@string/poke_picture"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="@id/bg_detail"
                app:layout_constraintTop_toTopOf="@id/bg_detail"
                android:elevation="5dp"
                app:loadImage="@{view_model.spriteUrl}"
                android:layout_marginTop="24sp"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"/>

            <TextView
                android:id="@+id/poke_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="#id"
                app:layout_constraintEnd_toEndOf="@id/bg_detail"
                app:layout_constraintTop_toTopOf="@id/bg_detail"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="8sp"
                android:text="@{view_model.pokemonId}"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_type_name1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                tools:text="type1"
                android:textColor="@color/white"
                android:text="@{view_model.pokemonElement1}"
                android:background="@{view_model.gradientElement1}"
                android:padding="4sp"
                app:layout_constraintTop_toTopOf="@id/bg_detail"
                app:layout_constraintBottom_toTopOf="@id/poke_hp"
                app:layout_constraintStart_toEndOf="@id/iv_poke_picture" />

            <TextView
                android:id="@+id/tv_type_name2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                tools:text="type2"
                android:textColor="@color/white"
                isVisible="@{view_model.isType2Available}"
                android:text="@{view_model.pokemonElement2}"
                android:background="@{view_model.gradientElement2}"
                android:padding="4sp"
                app:layout_constraintTop_toTopOf="@id/bg_detail"
                app:layout_constraintBottom_toTopOf="@id/poke_hp"
                app:layout_constraintStart_toEndOf="@id/tv_type_name1"
                android:layout_marginStart="8sp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_poke_type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8sp"
                android:layout_marginStart="8sp"
                app:layout_constraintTop_toTopOf="@id/iv_poke_picture"
                app:layout_constraintStart_toEndOf="@id/iv_poke_picture"
                app:layout_constraintEnd_toStartOf="@id/poke_id"/>

            <TextView
                android:id="@+id/poke_hp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/hp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="20sp"
                app:layout_constraintStart_toStartOf="@id/rv_poke_type"
                app:layout_constraintTop_toBottomOf="@id/rv_poke_type"/>

            <ProgressBar
                android:id="@+id/progressbar_hp"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="@{view_model.pokemonHp}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_hp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_poke_hp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="70"
                android:text="@{view_model.pokemonHp.toString()}"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="100sp"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_hp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/poke_attack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/attack"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/rv_poke_type"
                app:layout_constraintTop_toBottomOf="@id/poke_hp"/>

            <ProgressBar
                android:id="@+id/progressbar_attack"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="@{view_model.pokemonAtk}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_attack"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_poke_attack"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="70"
                android:text="@{view_model.pokemonAtk.toString()}"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="100sp"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_attack"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/poke_defense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/defense"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/rv_poke_type"
                app:layout_constraintTop_toBottomOf="@id/poke_attack"/>

            <ProgressBar
                android:id="@+id/progressbar_defense"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="@{view_model.pokemonDef}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_defense"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_poke_defense"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="70"
                android:text="@{view_model.pokemonDef.toString()}"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="100sp"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_defense"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/poke_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="10sp"
                app:layout_constraintStart_toStartOf="@id/rv_poke_type"
                app:layout_constraintTop_toBottomOf="@id/poke_defense"/>

            <ProgressBar
                android:id="@+id/progressbar_speed"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="@{view_model.pokemonSpeed}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_speed"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_poke_speed"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="70"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="100sp"
                android:text="@{view_model.pokemonSpeed.toString()}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_speed"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/poke_sp_attack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sp_attack"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="10sp"
                app:layout_constraintStart_toStartOf="@id/rv_poke_type"
                app:layout_constraintTop_toBottomOf="@id/poke_speed"/>

            <ProgressBar
                android:id="@+id/progressbar_sp_attack"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="@{view_model.pokemonSpAtk}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_sp_attack"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_poke_sp_attack"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="70"
                android:text="@{view_model.pokemonSpAtk.toString()}"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="100sp"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_sp_attack"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/poke_sp_defense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sp_defense"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/rv_poke_type"
                app:layout_constraintTop_toBottomOf="@id/poke_sp_attack"/>

            <ProgressBar
                android:id="@+id/progressbar_sp_defense"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="@{view_model.pokemonSpDef}"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_sp_defense"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_poke_sp_defense"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="70"
                android:text="@{view_model.pokemonSpDef.toString()}"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="100sp"
                app:layout_constraintStart_toEndOf="@id/poke_hp"
                app:layout_constraintTop_toTopOf="@id/poke_sp_defense"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="24sp"
                android:textColor="@color/white"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                app:layout_constraintTop_toBottomOf="@id/poke_sp_defense"
                app:layout_constraintStart_toStartOf="@id/bg_detail"
                app:layout_constraintEnd_toStartOf="@id/poke_sp_defense"/>

            <TextView
                android:id="@+id/tv_profile_pokemon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="ini profilenya"
                android:text="@{view_model.pokemonProfile}"
                android:textColor="@color/white"
                android:layout_marginStart="24sp"
                android:layout_marginEnd="24sp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/bg_detail"
                app:layout_constraintEnd_toEndOf="@id/bg_detail"
                app:layout_constraintTop_toBottomOf="@id/profile" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/poke_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintTop_toBottomOf="@id/tv_profile_pokemon"
                app:layout_constraintEnd_toStartOf="@id/poke_height"
                app:layout_constraintStart_toStartOf="@id/bg_detail"
                android:layout_marginStart="8sp"
                android:weightSum="2"
                android:layout_marginTop="16sp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/weight"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{view_model.pokemonWeight}"
                    tools:text="0.5kg"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/poke_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_pokemon"
                app:layout_constraintStart_toEndOf="@id/poke_weight"
                app:layout_constraintEnd_toEndOf="@id/bg_detail"
                android:layout_marginTop="16sp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/height"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{view_model.pokemonHeight}"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    tools:text="0.5m"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/poke_container"
                android:transitionName="pokeContainer"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:background="@{view_model.gradientElements}"
                android:elevation="-2dp"/>

            <LinearLayout
                android:id="@+id/bg_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="bgDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="16sp"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:elevation="-1dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>